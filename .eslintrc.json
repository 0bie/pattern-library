{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true
		},
		"sourceType": "module"
	},
    "globals": {
		"require": true
	},
	"rules": {
		"no-unused-vars": [2, { "vars": "local", "args": "after-used" }],
		"indent": ["error", 2],
		"linebreak-style": 0,
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-magic-numbers": 1,
		"no-console": 2
	}
}